<div class="container-fluid">
<h1> <%= @cat.name %> the cat.</h1>

<table>
  <tr>
    <td>Birth Date: </td>
    <td><%= "#{@cat.birth_date}" %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= "#{@cat.color}" %></td>
  </tr>
  <tr>
    <td>SEX!!!!: </td>
    <td><%= "#{@cat.sex}" %></td>
  </tr>
  <tr>
    <td>Description: </td>
    <td><%= "#{@cat.description}" %></td>
  </tr>
  <tr>
    <td>Owner: </td>
    <td><%= "#{@cat.owner.user_name}" %></td>
  </tr>
</table>
<br>
<% if @user_id == @cat.user_id %>
  <%= button_to "Edit", edit_cat_url(@cat), method: :get %>
<% end %>
<%= button_to "Enslave This Cat", new_cat_cat_rental_request_url(@cat), method: :get%>

<% @cat.cat_rental_requests.order(:start_date).each do |request| %>
  <%= render partial: "cat_rental_requests/request",
             locals: {
               cat_rental_request: request
             } %>
<% end %>
</div>
