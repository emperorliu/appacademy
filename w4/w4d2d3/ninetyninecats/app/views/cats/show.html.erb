<div class="col-md-6 col-md-offset-3 container-fluid">
  <h1> <%= @cat.name %> the cat.</h1>

  <table class="table table-striped table-bordered table-condensed">
    <th>Attribute</th><th>Value</th>
    <% @cat.attributes.each do |attr, value| %>
    <tr>
      <td><%= "#{attr.split("_").map(&:capitalize).join(" ")}:"%></td>
      <td><%= "#{value}" %></td>
    </tr>
    <% end %>
  </table>
  <br>
  <div class="btn-group">
    <div class="btn">
      <%= button_to "Edit", edit_cat_url(@cat) %>
    </div>
    <div class="btn">
      <%= button_to "Enslave This Cat", new_cat_cat_rental_request_url(@cat) %>
    </div>
  </div>

  <div class="row">
    <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
      <%= render partial: "cat_rental_requests/request",
      locals: { cat_rental_request: request } %>
    <% end %>
  </div>
</div>
